{
  "name": "@new-ui/typography",
  "version": "1.0.0",
  "description": "Modular typographic scale for you apps and websites. ",
  "scripts": {
    "build": "mkdir -p dist && postcss index.css -u postcss-import -u postcss-custom-media -u postcss-custom-properties -u postcss-extend-rule -u autoprefixer -o dist/typography.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NewDesignFile/typography.git"
  },
  "keywords": [
    "typography",
    "responsive",
    "type",
    "type-styles",
    "modular",
    "type",
    "tokens",
    "desktop",
    "mobile"
  ],
  "author": "Abhimanyu Rana",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NewDesignFile/typography/issues"
  },
  "homepage": "https://github.com/NewDesignFile/typography#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "postcss-cli": "^10.1.0",
    "postcss-custom-media": "^9.0.1",
    "postcss-custom-properties": "^12.1.11",
    "postcss-extend-rule": "^4.0.0",
    "postcss-import": "^15.1.0"
  }
}
